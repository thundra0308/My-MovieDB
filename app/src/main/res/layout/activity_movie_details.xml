<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.MovieDetailsActivity">

    <com.github.florent37.diagonallayout.DiagonalLayout
        android:id="@+id/movie_detail_diagonal_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:diagonal_angle="8"
        app:diagonal_position="bottom"
        app:diagonal_direction="right"
        android:background="@color/black">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/movie_detail_poster_image_view"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.github.florent37.diagonallayout.DiagonalLayout>

    <LinearLayout
        android:id="@+id/back_drop_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom|end"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="235dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/movie_detail_poster_circle_image_view"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:civ_border_width="3dp"
            app:civ_circle_background_color="@color/white"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/movie_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/yellow_main"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rating_layout"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/movie_detail_diagonal_view"
        android:layout_alignParentTop="true"
        android:layout_marginTop="281dp"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Average Rating"
            android:textColor="@color/yellow_main"
            android:textSize="18sp"/>

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/movie_rating_arcbar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            app:arc_finished_color="@color/yellow_main"
            app:arc_max="100"
            app:arc_suffix_text_padding="0dp"
            app:arc_suffix_text_size="12dp"
            app:arc_text_color="@color/white"
            app:arc_text_size="16dp"
            app:arc_unfinished_color="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:text="Total Vote Count : "
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/yellow_main"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/vote_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/yellow_main"
        android:layout_below="@id/rating_layout"
        android:layout_marginTop="5dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shadow"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/movie_detail_original_title_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="Original Title : "
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/yellow_main"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/movie_detail_original_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/movie_detail_original_language_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="Language : "
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/yellow_main"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/movie_detail_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/movie_detail_original_adult_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="Adult : "
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/yellow_main"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/movie_detail_adult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/movie_detail_original_status_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="Status : "
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/yellow_main"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/movie_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/movie_detail_original_runtime_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="Runtime : "
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/yellow_main"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/movie_detail_runtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/movie_detail_original_budget_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="Budget : "
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/yellow_main"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/movie_detail_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/movie_detail_original_revenue_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="Total Revenue : "
                    android:gravity="start"
