<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/search_result_container"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/yellow_main"
        android:padding="5dp"
        app:cardElevation="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="5dp"
                app:cardElevation="20dp"
                android:elevation="20dp"
                app:cardCornerRadius="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/poster_popular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rating_bar_background"
                        >

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_rating_main"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"/>

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/rating_bar_main"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        app:cpb_background_progressbar_color="@android:color/transparent"
                        app:cpb_background_progressbar_width="2dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color_start="@color/yellow_main"
                        app:cpb_progressbar_color_end="#FFF2B1"
                        app:cpb_progressbar_color_direction="left_to_right"
                        app:cpb_progressbar_width="2dp"
                        app:cpb_round_border="true"/>

                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardBackgroundColor="@color/black"
                android:padding="3dp"
                app:cardElevation="8dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/title_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:textColor="@color/yellow_main"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>