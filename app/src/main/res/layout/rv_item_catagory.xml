<!--                    android:textColor="@color/yellow_main"-->
<!--                    android:textSize="16sp"/>-->

<!--            </androidx.cardview.widget.CardView>-->

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>