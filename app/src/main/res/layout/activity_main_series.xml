<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary1"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp"
    tools:context=".activities.MainActivityMovies">

    <androidx.cardview.widget.CardView
        android:layout_width="332dp"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardElevation="0dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/primary2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:lottie_rawRes="@raw/ic_actionbar_icon"
                app:lottie_loop="true"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="20dp"
                android:gravity="end"
                android:text="MY MovieDB"
                android:textColor="@color/primary1"
                android:fontFamily="@font/ic_impact_t"
                android:textSize="28sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primary2"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/primary1"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="1dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/primary1"
                    app:cardCornerRadius="8dp">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/seacrh_mainseries"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/primary1"
                        android:padding="8dp"
                        app:queryHint="Search Movies..."
                        app:iconifiedByDefault="false"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/primary2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/rd_seriesmain_movies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="7.5dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/primary2"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_margin="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOVIES"
                    android:fontFamily="@font/ic_impact_t"
                    android:layout_gravity="center"
                    android:textColor="@color/primary1"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/rd_seriesmain_series"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/primary1"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SERIES"
                    android:fontFamily="@font/ic_impact_t"
                    android:layout_gravity="center"
                    android:textColor="@color/primary2"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pb_mainseriesactivity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        tools:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"/>

    <ScrollView
        android:id="@+id/sv_sma"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/primary2"
                android:text="Popular"
                android:fontFamily="@font/ic_impact_t"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mainseries_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/primary2"
                android:text=""
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mainseries_trending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>